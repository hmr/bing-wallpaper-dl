### Properties (https://spec.editorconfig.org/#file-format)
# indent_style = {tab | space}
# indent_size = integer
# tab_width = integer
# end_of_line = {lf | crlf | cr}
# charset = {utf-8 | utf-16be | utf16le | utf-8-bom | ...}
# spelling_language = {en-US | ja-JP | ...}
# trim_trailing_whitespace = {true | false}
# insert_final_newline = {true | false}
# max_line_length = {integer | off}


root = true

####################
## Base settings
####################
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
trim_trailing_whitespace = true

####################
## Markdown
####################
[*.md]
indent_size = 4
indent_style = space
trim_trailing_whitespace = false

####################
## dotfiles
####################
[.*]
indent_size = 2
indent_style = space

